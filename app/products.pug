                    li.custom-control.custom-radio
                      input.custom-control-input(type="radio" id="type3" name="customRadio")
                      label.custom-control-label(for="type3") Foundation Powder
              .sec-filter
                h4 Best Seller
                .best-seller
                  .item-prdct.has-sale
                    a(href="#")
                      span.tag-sale Sale
                      .box-img
                        .img(style="background-image: url(images/img-product-01.jpg);")
                      .desc
                        .star
                        .name
                          h3 Lorem Ipsuem
                        .price $389.00


          .col-lg-9
            .filter-prdct
              .col.view
                label VIEW
                .view-mode
                  a.list-mode(href="#")
                  a.grid-mode.grid2(href="#")
                  a.grid-mode.grid3(href="#")
                  a.grid-mode.grid4(href="#")
                  a.grid-mode.grid5(href="#")
              .col.show-sort
