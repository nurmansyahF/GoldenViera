      style(type='text/css').
        body {
          min-height: 100vh;
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 30px 0;
        }
        #wrap {
          width: 100%;
        }
        header {
          padding: 60px 30px 30px;
        }
        .logo {
          width: 180px;
          margin: 0 auto 3rem;
          display: block
        }
        .page-list-item {
          margin-bottom: 40px;
          display: flex;
        }
        {
          position: relative;
        }
        .new:after{
          content: "";
          width: 10px;
          height: 10px;
          position: absolute;
          top: -5px;
          right: 10px;
          border-radius: 50%;
          background: #4c834a;
        }
        .page-list-link {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 100%;
          height: 100%;
          padding: 10px 30px;
          border-radius: 4px;
          color: #555;
          font-weight: 500;
          text-decoration: none;
          text-align: center;
          text-transform: uppercase;
          box-shadow: 0 0 3px 0 rgba(0,0,0,.25);
          letter-spacing: 0;
          transition: all 0.4s ease 0s;
        }
        .page-list-link:hover {
          background: #efce57;
          color: #FFF;
          letter-spacing: 1px;
          -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.80);
          -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.80);
          box-shadow: 5px 40px -10px rgba(0,0,0,0.80);
          transition: all 0.4s ease 0s;
        }

